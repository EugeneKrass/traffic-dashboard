// firestore.rules
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Traffic stats collection
    match /trafficStats/{document} {
      // Allow read access to all authenticated users
      allow read: if request.auth != null;
      
      // Allow write access only through Cloud Functions
      // Direct write access is disabled to enforce business logic
      allow write: if false;
    }
    
    // Optional: User profiles collection for role management
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; // Only allow writes through Admin SDK
    }
  }
}